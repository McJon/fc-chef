{% if section.settings.toggle %}
  <div class="message-bar-con">
    {% if section.settings.message_header != blank %}
      <h2>{{ section.settings.message_header }}</h2>
    {% endif %}


    {% if section.settings.page_link != blank %}

      {% if section.settings.message_content != blank %}
        <a class="covid-link" href="{{ section.settings.page_link }}">
          {{ section.settings.message_content }}
        </a>
      {% endif %}

    {% else %}
      {% if section.settings.message_content != blank %}
        <p>{{ section.settings.message_content }}</p>
      {% endif %}

    {% endif %}

    <button>&#10062;</button>
  </div>
{% endif %}

{% schema %}
{
  "name": "Announcement",
  "settings": [
    {
      "type": "page",
      "id": "page_link",
      "label": "Page Link"
    },
    {
      "type": "checkbox",
      "id": "toggle",
      "label": "Toggle Message Bar",
      "default": false
    },
    {
      "type": "textarea",
      "id": "message_header",
      "label": "Message Header"
    },
    {
      "type": "textarea",
      "id": "message_content",
      "label": "Message Content"
    }
  ]
}
{% endschema %}
